#!/bin/bash
################################################################################
# A sentence or two about the script
################################################################################

##source /etc/odoo/odoo.tools

##
[ -f /etc/odoo/odoo.tools ] && . /etc/odoo/odoo.tools
if [ ! -z "$ODOOADDONS" ]; then
    CMD="s/^addons_path.*=.*/addons_path=${ODOOADDONS//"/"/"\/"}/g"
    sudo perl -i -pe $CMD $ODOO_SERVER_CONF
fi

##
exit 0 # Success
