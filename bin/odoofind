#!/bin/bash
################################################################################

synopsis (){
  echo "Grep for pattern in odoo-core source code"
}
function usage(){
  echo "Usage: odoofind [pattern]"
}

## Test if conf exist so we don't garble stuff
if [ -f /etc/odoo/odoo.tools ];
then
  source /etc/odoo/odoo.tools
else
  echo "Configuration /etc/odoo/odoo.tools not found"
  exit -1
fi

##

find -L $ODOOCORE -type f -exec grep -Hn $1 {} \;

##
exit 0 # Success
